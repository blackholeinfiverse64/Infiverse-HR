# ============================================
# BHIV HR PLATFORM - Environment Variables
# ============================================
# Version: 4.3.0
# Last Updated: December 9, 2025
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all <PLACEHOLDER> values with actual credentials
# 3. NEVER commit .env to Git
# ============================================

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
DATABASE_URL=<YOUR_DATABASE_URL>

# ============================================
# AUTHENTICATION SECRETS (REQUIRED)
# ============================================
# Generate with: openssl rand -hex 32
API_KEY_SECRET=<YOUR_API_KEY_SECRET>
JWT_SECRET_KEY=<YOUR_JWT_SECRET_KEY>
CANDIDATE_JWT_SECRET_KEY=<YOUR_CANDIDATE_JWT_SECRET_KEY>
GATEWAY_SECRET_KEY=<YOUR_GATEWAY_SECRET_KEY>

# ============================================
# SERVICE URLS
# ============================================
GATEWAY_SERVICE_URL=<YOUR_GATEWAY_SERVICE_URL>
AGENT_SERVICE_URL=<YOUR_AGENT_SERVICE_URL>
LANGGRAPH_SERVICE_URL=<YOUR_LANGGRAPH_SERVICE_URL>
PORTAL_SERVICE_URL=<YOUR_PORTAL_SERVICE_URL>
CLIENT_PORTAL_SERVICE_URL=<YOUR_CLIENT_PORTAL_SERVICE_URL>
CANDIDATE_PORTAL_SERVICE_URL=<YOUR_CANDIDATE_PORTAL_SERVICE_URL>

# ============================================
# AI/ML SERVICES (OPTIONAL)
# ============================================
# Google Gemini API (for advanced AI features)
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>

# OpenAI API (alternative AI provider)
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>

# ============================================
# COMMUNICATION SERVICES (LANGGRAPH ONLY)
# ============================================
# Gmail SMTP for Email Notifications
GMAIL_EMAIL=<YOUR_GMAIL_EMAIL>
GMAIL_APP_PASSWORD_SECRET_KEY=<YOUR_GMAIL_APP_PASSWORD>

# Twilio for WhatsApp/SMS Notifications
TWILIO_ACCOUNT_SID=<YOUR_TWILIO_ACCOUNT_SID>
TWILIO_AUTH_TOKEN_SECRET_KEY=<YOUR_TWILIO_AUTH_TOKEN>
TWILIO_WHATSAPP_NUMBER=<YOUR_WHATSAPP_NUMBER>

# Telegram Bot for Telegram Notifications
TELEGRAM_BOT_USERNAME=<YOUR_TELEGRAM_BOT_USERNAME>
TELEGRAM_BOT_TOKEN_SECRET_KEY=<YOUR_TELEGRAM_BOT_TOKEN>

# ============================================
# SYSTEM CONFIGURATION
# ============================================
ENVIRONMENT=<development/production>
LOG_LEVEL=<DEBUG/INFO/WARNING/ERROR>

# Performance Settings
MAX_CANDIDATES_PER_REQUEST=50
AI_MATCHING_TIMEOUT=15

# ============================================
# SERVICE PORTS (LOCAL DEVELOPMENT)
# ============================================
GATEWAY_PORT=8000
AGENT_PORT=9000
LANGGRAPH_PORT=9001
PORTAL_PORT=8501
CLIENT_PORTAL_PORT=8502
CANDIDATE_PORTAL_PORT=8503
DATABASE_PORT=5432

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_PREMIUM=300
RATE_LIMIT_ENTERPRISE=500

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Account lockout after failed login attempts
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=true

# ============================================
# AI MATCHING CONFIGURATION
# ============================================
# Phase 3 Semantic Engine
SEMANTIC_MODEL_PATH=/models/sentence-transformer
MATCHING_BATCH_SIZE=50
MATCHING_TIMEOUT_SECONDS=60

# ============================================
# WORKFLOW CONFIGURATION
# ============================================
WORKFLOW_TIMEOUT_SECONDS=120
WORKFLOW_RETRY_ATTEMPTS=3

# ============================================
# MONITORING & METRICS
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8502,http://localhost:8503

# ============================================
# RENDER DEPLOYMENT (PRODUCTION ONLY)
# ============================================
# These are set automatically by Render
# RENDER_EXTERNAL_URL=<auto-set-by-render>
# RENDER_INTERNAL_HOSTNAME=<auto-set-by-render>
# RENDER_SERVICE_NAME=<auto-set-by-render>

# ============================================
# BACKUP & RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Cron format: Daily at 2 AM

BACKUP_RETENTION_DAYS=7

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SEMANTIC=<true/false>
ENABLE_AUTO_SYNC=<true/false>
ENABLE_VALUES_ASSESSMENT=<true/false>

# ============================================
# DEMO CREDENTIALS (DEVELOPMENT ONLY)
# ============================================
DEMO_CLIENT_ID=TECH001
DEMO_CLIENT_PASSWORD=demo123
DEMO_USER_USERNAME=demo_user
DEMO_USER_PASSWORD=demo_password

# ============================================
# NOTES
# ============================================
# 1. REQUIRED variables must be set for system to function
# 2. OPTIONAL variables enable additional features
# 3. Generate secure secrets: openssl rand -hex 32
# 4. Gmail App Password: https://support.google.com/accounts/answer/185833
# 5. Twilio Credentials: https://console.twilio.com
# 6. Telegram Bot Token: https://t.me/BotFather
# 7. Gemini API Key: https://makersuite.google.com/app/apikey
# 8. Never commit .env file to version control
# 9. Use different secrets for development/staging/production
# 10. Rotate secrets every 90 days for security
